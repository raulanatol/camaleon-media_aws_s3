<%= form_for(admin_plugins_media_aws_s3_settings_path, html: {id: "media_aws_s3_form", class: "validate"}) do %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title"> <%= t('plugin.media_aws_s3.settings.title') %></h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><%= t('plugin.media_aws_s3.settings.bucket') %> </span>
            <%= text_field_tag('media_aws_s3[bucket_name]', @media_aws_s3[:bucket_name], class: 'required form-control') %>

            <span class="input-group-addon"><%= t('plugin.media_aws_s3.settings.region') %> </span>
            <%= text_field_tag('media_aws_s3[region]', @media_aws_s3[:region], class: 'required form-control') %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><%= t('plugin.media_aws_s3.settings.access_key_id') %> </span>
            <%= text_field_tag('media_aws_s3[access_key_id]', @media_aws_s3[:access_key_id], class: 'required form-control') %>

            <span class="input-group-addon"><%= t('plugin.media_aws_s3.settings.secret_access_key') %> </span>
            <%= text_field_tag('media_aws_s3[secret_access_key]', @media_aws_s3[:secret_access_key], class: 'required form-control') %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><%= t('plugin.media_aws_s3.settings.cdn_base_path') %> </span>
            <%= text_field_tag('media_aws_s3[cdn_base_path]', @media_aws_s3[:cdn_base_path], class: 'required form-control') %>
          </div>
        </div>

      </div>
      <div class="panel-footer">
        <a class="btn btn-default" href="<%= url_for admin_plugins_path %>"><%= t('admin.button.back') %></a>
        <button class="btn btn-primary pull-right" type="submit"><%= t('admin.button.submit') %></button>
      </div>
    </div>

<% end %>